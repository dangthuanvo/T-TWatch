    //Get more reviews
    function ShowMoreReviews(pageSize) {
        var totalReview = document.getElementById('listArea').childElementCount;
        console.log(totalReview);
        var currentShow = totalReview;
        for (let i = 1; i <= totalReview; i++) {
            if (document.getElementById('trCount ' + i).style.display === 'none') {
                currentShow = i;
                break;
            }
        }
        if (currentShow <= totalReview) {
            for (let i = 0; i < pageSize; i++) {
                let index = i + currentShow;
                if (index <= totalReview) {
                    document.getElementById('trCount ' + index).style.display = 'table-row';
                }
            }
        }
        if (currentShow >= totalReview) {
            document.getElementById('buttonShowReview').style.display = 'none';
        }
    }

</script>
